{

  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:5000"
  },

  "Routes": [
    {
      "UpstreamPathTemplate": "/{offset}",
      "UpstreamHttpMethod": [
        "Post",
        "Put",
        "Delete",
        "Get",
        "Options"
      ],

      "DownstreamPathTemplate": "/{offset}",
      "DownstreamScheme": "$DownstreamScheme$",
      "DownstreamHostAndPorts": [
        {
          "Host": "$DownstreamHost$",
          "Port": "$DownstreamPort$"
        }
      ],
      "DownstreamHeaderTransform": {
        "host": "{BaseUrl}"
      }
    }
  ]

}