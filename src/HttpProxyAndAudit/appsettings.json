{
  "Serilog": {
    "minimumLevel": {
      "default": "Information",
      "override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Ocelot": "Warning"
      }
    }
  },

  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:5000"
  },

  "ReRoutes": [
    {
      "UpstreamPathTemplate": "/{offset}",
      "UpstreamHttpMethod": [
        "Post",
        "Put",
        "Delete",
        "Get",
        "Options"
      ],

      "DownstreamPathTemplate": "/{offset}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "exchange.swisschain.io",
          "Port": 443
        }
      ]
    }
  ]

}